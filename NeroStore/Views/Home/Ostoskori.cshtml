@model List<Tuote>


<h1>Ostoskori</h1>
<br />
<br />

<table border="1">
    <tr>
        <th>Tuotenimi</th>
        <th>Lukumäärä</th>
        <th>Hinta</th>
        <th></th>
    </tr>
    @{
        foreach (var tuote in Model)
        {

            string url = $"PoistaaKorista/{tuote.TuoteId}";

            <tr>
                <td>@tuote.Nimi</td>
                <td>@tuote.Lkm</td>
                <td>@tuote.Hinta</td>
                <td><a href="@url"><input type="button" value="Poista tuote" /></a></td>

            </tr>
        }
    }
    <tr>
        <td></td>
        <td>Tuotteiden määrä: <strong>@Model.Select(a => a.Lkm).Sum()</strong></td>
        <td>Kokonaishinta: <strong>@Model.Select(a => a.Hinta).Sum()</strong></td>
    </tr>
</table>
<br />
<br />

<form method="post">
    <label>Sähköposti</label>
    <br />
    <input type="email" />
    <br />
    <br />
    <div>
        <label>Lupaan kautta kiven ja kannon että olen oikea henkilö enkä mikään botti</label>
        <br />
        <input type="checkbox" value="Kyllä" name="varmistus" />
        <label for="varmistus">Kyllä</label>
    </div>
    <br />
    <input type="submit" value="Lähetä tilaus" />
</form>
